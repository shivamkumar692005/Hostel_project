                      <li><a class="dropdown-item building-link" href="#">RR Plaza</a></li>
                      <li><a class="dropdown-item building-link" href="#">KM Residency</a></li>
                      <li><a class="dropdown-item building-link" href="#">Vignan Main Hostel</a></li>
                      <li><a class="dropdown-item building-link" href="#">Bezawada Enclave</a></li>
                      <li><a class="dropdown-item building-link" href="#">SR Residency</a></li>
                      <li><a class="dropdown-item building-link" href="#">Ananya Avenue</a></li>
                    </ul>
                    <input type="hidden" id="selectedBuilding" name="complaint[building]" />
                  </div>

                  <div class="dropup-center dropend col-6 col-md-6">
                    <button type="button" class="btn btn-primary dropdown-toggle" id="problem" data-bs-toggle="dropdown"
                      aria-expanded="false">
                      Problems
                    </button>
                    <ul class="dropdown-menu" id="problemlist">
                      <li><a class="dropdown-item problem-link" href="#">Mess</a></li>
                      <li><a class="dropdown-item problem-link" href="#">Hygiene</a></li>
                      <li><a class="dropdown-item problem-link" href="#">Infranstructure</a></li>
                      <li><a class="dropdown-item problem-link" href="#">Laundary</a></li>
                    </ul>
                    <input type="hidden" id="selectedProblem" name="complaint[problem]" />
                  </div>

                  <div class="dropup-center dropstart col-6 col-md-6">
                    <button type="button" class="btn btn-primary dropdown-toggle" id="subProbelem"
                      data-bs-toggle="dropdown" aria-expanded="false" disabled>
                      Sub-Problem
                    </button>
                    <ul class="dropdown-menu" id="subProbelemlist"></ul>
                    <input type="hidden" id="selectedSubProblem" name="complaint[subProblem]"/>
                  </div>
                </div>
              </div>

              <!-- room number field -->
              <div class="mb-3">
                <label class="form-label" for="rno">Room No:</label>
                <input type="text" id="rno" name="complaint[roomno]" placeholder="Enter Room no" required
                  class="form-control">
              </div>

              <!-- floor number field -->
              <div class="mb-3">
                <label class="form-label" for="rno">Floor No:</label>
                <input type="text" id="rno" name="complaint[floorno]" placeholder="Enter Floor no" required
                  class="form-control">
              </div>


              <!-- Description field -->
              <div class="mb-3">
                <label class="form-label" for="description">Description: </label>
                <textarea id="description" name="complaint[description]" placeholder="description"
                  class="form-control"></textarea>
              </div>

              <!-- File upload -->
              <div class="input-group">
                <input type="file" class="form-control" id="inputGroupFile04" name="complaint[file]"
                  aria-describedby="inputGroupFileAddon04" aria-label="Upload">
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>

      </div>
    </div>
  </div>

