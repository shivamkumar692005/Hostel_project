              </div>

              <!-- Dropdowns for buildings, problems, and sub-problems -->
              <div class="mb-3">
                <div class="row g-2">
                  <div class="dropup-center dropend col-12 col-md-12">
                    <button type="button" class="btn btn-primary dropdown-toggle" id="building"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      Buildings
                    </button>
                    <ul class="dropdown-menu" id="buildinglist">
